    public void ACTION_B_ENTER() throws InterruptedException{
        if(!nickname.getText().equals("")){
            UserName= nickname.getText();
            
            Port= CHANNELS.get(Rooms[rooms.getSelectedIndex()]);
        if(!ip.getText().equals(""))
            Host= ip.getText();
        else
            JOptionPane.showMessageDialog(null, "Please enter an adress to connect!");
           
            new CLIENT_GUI().setVisible(true);
            dispose();
        }
        else
            JOptionPane.showMessageDialog(null, "Please enter a name!");
        
        
        
        
    }
