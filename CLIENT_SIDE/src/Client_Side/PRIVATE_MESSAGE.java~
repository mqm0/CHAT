    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
       
        /*  Preparing of the private message to deliver. specifying the message 
        is from who, to who and adding the keyword /priv in the begining */
        CLIENT_GUI.ACTION_B_SEND_PRIVATE("/priv "+messageFrom+": "+CLIENT_GUI.messageTo);
        dispose();
    }//GEN-LAST:event_jButton2ActionPerformed

    private void msgKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_msgKeyPressed
        
        if(evt.getKeyCode()== java.awt.event.KeyEvent.VK_ENTER){
            CLIENT_GUI.ACTION_B_SEND_PRIVATE("/priv "+messageFrom+": "+CLIENT_GUI.messageTo);
            dispose();
        }
    }//GEN-LAST:event_msgKeyPressed

   
